<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/btn_loc_peo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/btn_lbs_people_normal_1"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp" />

        <ImageView
            android:id="@+id/btn_loc_car"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/btn_lbs_cars_normal_1"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/btn_loc_peo"
            android:layout_alignLeft="@+id/btn_loc_peo"
            android:layout_alignStart="@+id/btn_loc_peo" />

        <ImageView
            android:id="@+id/btn_zoom_in"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/selector_btn_zoom_in"
            android:layout_marginBottom="163dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/btn_loc_car"
            android:layout_alignStart="@+id/btn_loc_car" />

        <ImageView
            android:id="@+id/btn_zoom_out"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="63dp"
            android:src="@drawable/selector_btn_zoom_out"
            android:layout_gravity="right"
            android:layout_alignTop="@+id/btn_zoom_in"
            android:layout_alignLeft="@+id/btn_zoom_in"
            android:layout_alignStart="@+id/btn_zoom_in" />
    </RelativeLayout>

</merge>